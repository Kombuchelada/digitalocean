# Export automatically with: set -a; source .env; set +a

# DigitalOcean token (used by Terraform via TF_VAR_do_token and Ansible via DO_PAT)
DO_PAT=<your_digitalocean_token>
TF_VAR_do_token=${DO_PAT}

# SSH private key path for Terraform remote-exec and Ansible
SSH_KEY_PATH=<your_ssh_key_path>
TF_VAR_pvt_key=${SSH_KEY_PATH}
ANSIBLE_PRIVATE_KEY_FILE=${SSH_KEY_PATH}

# Ansible host (domain or IP)
DOMAIN=<your_domain>
ANSIBLE_HOST=${DOMAIN}
TF_VAR_domain=${DOMAIN}
TF_API_TOKEN=<your_terraform_api_token>
